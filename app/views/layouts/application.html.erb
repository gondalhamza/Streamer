<!DOCTYPE html>
<html>
  <head>
    <title>Streamer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="app-container"> 
      <div class="sidebar">
        <%= render 'shared/sidebar' %>
      </div>

      <div class="main">
          <div class="top-row">
          </div>

          <div class="content">
              <%= yield %>
          </div>
      </div>
    </div>
  </body>
</html>